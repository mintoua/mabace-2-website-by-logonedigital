{% extends "base.html.twig" %} {% block title %} Accueil | MA.BA.CE.&#x2161; {%
endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
{% endblock %}

{% block javascripts %}

  <script>
    function chooseCategory(cat,slug) {
      const url = new URL(window.location.href);

      fetch(url.pathname + "?" + "catSlug=" + slug.toString() + "&ajax=1", {
        headers: {
          "X-Requested-With": "XMLHttpRequest",
        },
      })
              .then((response) => response.json())
              .then((data) => {
                var content = document.getElementById("services_content");
                var newLabel = document.getElementById("labelChoosen");
                //console.log(data.content)
                newLabel.innerHTML =
                        slug + '<i class="uil iconify" data-icon="mdi:chevron-down"></i>';

                content.innerHTML = data.content;
                history.pushState(
                        {},
                        null,
                        url.pathname + "?" + "catSlug=" + slug.toString()
                );
              })
              .catch((e) => console.log(e));
    }
  </script>
{% endblock%}

{% block body %}
  {% set queryParams = app.request.query.all
    |filter((v,k)=>k!="page") %}
<!-- Header -->
{{ include("./includes/navbar.html.twig") }}

<div
  class="section-lg bg-image bg-image-gradient-top parallax"
  data-bg-src="{{ asset('frontoffice/') }}images/background.jpg"
>
  <div class="bg-white-06">
    <div class="container text-center">
      <div class="row g-4">
        <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
          <h1 class="fw-light margin-0">
            Team of highly skilled people are ready to work with you
          </h1>
        </div>
      </div>
      <!-- end row -->
    </div>
    <!-- end container -->
  </div>
</div>
<div class="sec-center">
  <div class="dropdown">
    {% if queryParams is not empty and queryParams.catSlug is not empty %}
      {% if queryParams.catSlug == "Tous" %}
        <button class="button button-lg button-radius button-outline-dark-2 dropdown-toggle" type="button"
               id="labelChoosen" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Tous
          <i class="uil iconify" data-icon="mdi:chevron-down"></i>
        </button>
      {% else %}
        {% for cat in categoriesServices %}
          {% if cat.intitule == queryParams.catSlug %}
        <button class="button button-lg button-radius button-outline-dark-2 dropdown-toggle" type="button"
               id="labelChoosen" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          {{ cat.intitule }}
          <i class="uil iconify" data-icon="mdi:chevron-down"></i>
        </button>
          {% endif %}
        {% endfor %}
      {% endif %}
    {% else%}
      <button class="button button-lg button-radius button-outline-dark-2 dropdown-toggle" type="button"
             id="labelChoosen" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Filtrer selon la categorie
        <i class="uil iconify" data-icon="mdi:chevron-down"></i>
      </button>
    {% endif %}
    <div class="dropdown-menu" aria-labelledby="labelChoosen">
      <a class="dropdown-item" href="javascript:chooseCategory(0,'Tous');"
      >Tous <i class="uil uil-arrow-right"></i
        ></a>
      {% for category in categoriesServices %}
        <a
                class="dropdown-item"
                href="javascript:chooseCategory({{ category.id }},'{{ category.intitule }}');"
        >{{ category.intitule }} <i class="uil uil-arrow-right"></i
          ></a>
      {% endfor %}
    </div>
  </div>
</div>
<div class="section padding-top-0">
  <div class="container">
    <div class="row icon-5xl g-4 text-center" id="services_content">
      {% include "annonce/serviceList.html.twig" %}
    </div>
    <nav>
      {{ knp_pagination_render(services,"pagination.html.twig") }}
    </nav>
    <!-- end row -->
  </div>
  <!-- end container -->
</div>

{{ include("./includes/footer.html.twig") }}

<!-- Scroll to top button -->
<div class="scrolltotop">
  <a class="button-circle button-circle-sm button-circle-dark" href="#"
    ><i class="bi bi-arrow-up"></i
  ></a>
</div>

{% endblock %}
