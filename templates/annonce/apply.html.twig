                            <div class="form-group">
                                {{ form_widget(form.email,{'attr': {'placeholder': 'Email','class':'form-control form-control-lg'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.tel,{'attr': {'placeholder': 'Tel','class':'form-control form-control-lg'}}) }}
