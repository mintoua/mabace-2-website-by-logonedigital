    <!-- Contact section -->
    <div class="section">
        <div class="container">
                    <div class="d-flex justify-content-center text-center">
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_widget(form.nom,{'attr': {'placeholder': 'Nom','class':'form-control form-control-lg'}}) }}
