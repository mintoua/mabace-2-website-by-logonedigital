{% extends "base_compta.html.twig" %} {% block body %}

<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  {{ include("./includes/sidebar.html.twig") }}
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      {{ include("./includes/navbar-compta.html.twig") }}
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row d-flex justify-content-center">
          <div class="col-lg-8 col-md-8 col-auto">
            {{ form_start(form) }}
            <h1 class="text-uppercase text-center">Sanction</h1>
            <div class="mb-3">
              {{
                form_row(form.type, {
                  label: false,
                  attr: {
                    class: "form-control",
                    placeholder: "Type Sanction"
                  }
                })
              }}
            </div>
            <div class="mb-3">
              {{
                form_row(form.intitule, {
                  label: false,
                  attr: {
                    class: "form-control",
                    placeholder: "Intitule de la Sanction"
                  }
                })
              }}
            </div>
            <div class="mb-3">
              {{
                form_row(form.raison, {
                  label: false,
                  attr: {
                    class: "form-control",
                    placeholder: "Raison de la sanction ..."
                  }
                })
              }}
            </div>

            <div class="mb-3">
              <button type="submit" class="btn btn-primary w-100">
                Enregistré
              </button>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    {{ include("./includes/footer-compta.html.twig") }}
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div
  class="modal fade"
  id="logoutModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button
          class="close"
          type="button"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        Select "Logout" below if you are ready to end your current session.
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">
          Cancel
        </button>
        <a class="btn btn-primary" href="login.html">Logout</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}
