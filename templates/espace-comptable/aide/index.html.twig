{% extends "base_compta.html.twig" %}
{% block body %}

	<!-- Page Wrapper -->
	<div
		id="wrapper">
		<!-- Sidebar -->
		{{ include("./includes/sidebar.html.twig") }}
		<!-- End of Sidebar -->

		<!-- Content Wrapper -->
			<div
			id="content-wrapper" class="d-flex flex-column"> <!-- Main Content -->
			<div id="content">

				<div id="aide_page" class="container">
					<h1>Liste des Aides Récentes</h1>
					<a href="{{ path('app_aide_create') }}" class="btn btn-primary m-2">Nouvelle Aide</a>
					<table class="table table-striped">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Matricule du membre</th>
								<th scope="col">Type de l'aide</th>
								<th scope="col">Description de l'aide</th>
								<th scope="col">Date d'enregistrement</th>
								<th scope="col">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for aide in aides %}
								<tr>
									<th scope="row">{{  aide.getId() }}</th>
									<td>{{ aide.getIdMembre()  }}</td>
									<td>{{ aide.getTypeAide() }}</td>
									<td>{{ aide.getDescription() }}</td>
									<td>{{ aide.getCreatedAt() | date("m/d/Y") }}</td>
									<td>
										<a href="#" class="btn btn-primary btn-sm">Voir</a>
									</td>
								</tr>
							{% else %}
								<h4>Aucuns enregistrements pour le moment!</h4>
							{% endfor %}

						</tbody>
					</table>

				</div>


				<!-- Footer -->
				{{ include("./includes/footer-compta.html.twig") }}
				<!-- End of Footer -->
			</div>
			<!-- End of Content Wrapper -->
		</div>
		<!-- End of Page Wrapper -->

		<!-- Scroll to Top Button-->
		<a class="scroll-to-top rounded" href="#page-top">
			<i class="fas fa-angle-up"></i>
		</a>

		<!-- Logout Modal-->
		<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
						<button class="close" type="button" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">×</span>
						</button>
					</div>
					<div class="modal-body">
						Select "Logout" below if you are ready to end your current session.
					</div>
					<div class="modal-footer">
						<button class="btn btn-secondary" type="button" data-dismiss="modal">
							Cancel
						</button>
						<a class="btn btn-primary" href="login.html">Logout</a>
					</div>
				</div>
			</div>
		</div>

	{% endblock %}
