<script>
  grecaptcha.ready(function () {
    grecaptcha
      .execute("6Lc96AYfAAAAAAJsKTsNdyF4yBBWVnt5rWll8Dbe", {
        action: "homepage",
      })
      .then(function (token) {
        console.log(document.getElementById("contact_captcha"));
        document.getElementById("contact_captcha").value = token;
      });
  });
</script>
