<!-- Contact section -->
<div class="section">
  <div class="container">
    <div class="row g-4">
      <div class="col-12 col-md-4">
        <div class="margin-bottom-30">
          <h6 class="fw-normal margin-0">Téléphone:</h6>
          <p>+(237) 71 67 29 69</p>
        </div>
        <div class="margin-bottom-30">
          <h6 class="fw-normal margin-0">Email:</h6>
          <p>contact@mabacedeux.com</p>
        </div>
        <div>
          <h6 class="fw-normal margin-0">Address:</h6>
          <p>MA.BA.CE.&#x2161; S/C BP/25003 YAOUNDE </p>
        </div>
      </div>
      <div class="col-12 col-md-8">
        {{ form_start(form) }}
        {{
                form_row(form.nom, {
                  label: false,
                  attr: {
                    placeholder: "Nom complet"
                  }
                })
              }}
        {{
                form_row(form.email, {
                  label: false,
                  attr: {
                    placeholder: "Email"
                  }
                })
              }}
        {{
              form_row(form.message, {
                label: false,
                attr: {
                  placeholder: "Comment pouvons-nous vous aider ?",
                  id: "message"
                }
              })
            }}
        <button class="btn-position button button-lg button-radius button-outline-dark-2 position" type="submit">
            Envoyer
        </button>
      {{ form_end(form) }}
        </div>
      </div>
    </div>
    <!-- end row -->
  </div>
  <!-- end container -->
</div>
<!-- end Contact section -->

